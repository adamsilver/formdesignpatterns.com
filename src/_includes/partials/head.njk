{% if title %}
	{% if tags == "article" %}
		<title>{{ title }} by Adam Silver</title>
	{% else %}
		<title>{{ title }}</title>
	{% endif %}
{% else %}
	<title>{{ site.title }}</title>
{% endif %}

{% if description %}
  <meta name="description" content="{{description}}">
{% else %}
  <meta name="description" content="{{site.description}}">
{% endif %}

<meta http-equiv="Content-Type" content="text/html;charset=utf-8">
<meta name="viewport" content="initial-scale=1.0">
<meta name="Author" content="Adam Silver">

{% include "partials/favicon.njk" %}

<meta property="og:locale" content="en_GB">
<meta property="og:type" content="website">

{% if title %}
	{% if tags == "article" %}
		<meta content="{{ title }} by Adam Silver" property="og:title">
	{% else %}
		<meta content="{{ title }}" property="og:title">
	{% endif %}
{% else %}
	<meta content="{{ site.title }}" property="og:title">
{% endif %}

{% if description %}
	<meta property="og:description" content="{{ description }}">
{% else %}
	<meta property="og:description" content="{{ site.description }}">
{% endif %}

<meta property="og:url" content="{{ site.url }}{{ page.url | permalink }}">
<meta property="og:site_name" content="Adamsilver.io">
<meta property="og:image" content="{{ site.url }}/assets/images/card.jpg">
<meta property="og:image:width" content="181">
<meta property="og:image:height" content="181">

<meta name="twitter:card" content="summary">

{% if description %}
	<meta name="twitter:description" content="{{ description }}">
{% else %}
	<meta name="twitter:description" content="{{ site.description }}">
{% endif %}

<meta name="twitter:title" content="{% if title %}{{ title }} - {% endif %} {{ site.name }}">

{% if tags == "article" %}
	<meta content="{{ title }}" name="twitter:title">
{% else %}
	<meta content="{% if title %}{{ title }} | {% endif %}{{ site.name }}" name="twitter:title">
{% endif %}

<meta name="twitter:site" content="@adambsilver">
<meta name="twitter:creator" content="@adambsilver">
<meta property="twitter:image" content="{{ site.url }}/assets/images/card.png">

{% if description %}
	<meta itemprop="description" content="{{ description }}">
{% else %}
	<meta itemprop="description" content="{{ site.description }}">
{% endif %}

{% include 'partials/headCss.njk' %}

<link rel="canonical" href="{{ site.url }}{{ page.url | permalink }}">
<link rel="author" href="https://plus.google.com/u/0/+AdamSilver1">

